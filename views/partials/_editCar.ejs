<p><b>Cars > List Car > </b>Update Car Information</p>
<h2>Update Car Information</h2>

<form action="/api/<%= mobil.id %>" method="POST" id="edit_car">
    <div class="card" id="big-card">
        <div class="form-group">
            <label for="nama" style="margin-right: 80px;">Nama</label>
            <input type="text" id="nama" name="nama" value="<%= mobil.nama %>" required><br>
        </div>
        <div class="form-group">
            <label for="hrg_sewa" style="margin-right: 25px;">Sewa Per Hari</label>
            <input type="text" id="hrg_sewa" name="hrg_sewa" value="<%= mobil.hrg_sewa %>" required><br>
        </div>
        <div class="form-group">
            <label for="ukuran" style="margin-right: 71px;">Ukuran</label>
            <select id="ukuran" name="ukuran">
                <option style="visibility: hidden;" value=" <% mobil.ukuran %>">
                    <%= mobil.ukuran %>
                </option>
                <option value="small">small</option>
                <option value="medium">medium</option>
                <option value="large">large</option>
            </select>
        </div>
        <div class="form-group">
            <label for="foto" style="margin-right: 90px;">Foto</label>
            <input required type="text" id="foto" name="foto" value="<%= mobil.foto %>" required><br>
        </div>
    </div>
    <div class="card-btn2">
        <a href="/">
            <div class="btn-cancel">
                Cancel
            </div>
        </a>
        <button type="submit" class="btn-save" style="border: none;">
            Save
        </button>
    </div>
</form>